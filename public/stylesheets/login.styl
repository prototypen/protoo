#loginForm
	border-style dashed
	border-width 2px
	border-color black
	display block
	width 200px
	background-color #EEE
	padding 10px

	input
		font-family solex, helvetica, arial
		padding 2pt


	input[type='submit']
		font-size 8pt
		border-radius 5pt
		background-color white
		border-color black
		border-width 2pt
		background-color #ddd
		padding 4pt
		padding-top 5pt

		&:hover
			background-color #eee

		&:active
			background-color #fff
